<body class="log">
	<div class="container">
		<div class="vertical-center-row">
			<div align="center">
				<div class="badge">
					<span style="color:black">
					<h1 id="log_in">Log In</h1>
					<%= form_tag("/login", method: "post") do %>
						<p>
						  <%= label_tag(:name, "Username:") %>
						  <%= text_field_tag(:name) %>
						</p>
						<p>
						  <%= label_tag(:password, "Password:") %>
						  <%= text_field_tag(:password) %>
						</p>
						<p>
						  <%= submit_tag("submit") %>
						</p>
					<% end %>
					</span>
				</div>
			</div>
		</div>
	</div>
</body>