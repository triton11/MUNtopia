<body class="message"> 
  <div class="container">
    <div class="row">
      <p id="notice"><%= notice %></p>

      <h1>Inbox</h1>

      <table border="5" style="width:1000px; background-color:#FFF;">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Sender</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @mynotes.each do |note| %>
            <tr>
              <td style="width:100px;"><%= note.title %></td>
              <td style="width:700px;"><%= note.body %></td>
              <td style="width:100px;"><%= User.all.find(note.sender).name %></td>
              <td style="width:100px;"><%= link_to 'Delete', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
</body>
