<body class="message">
<div class="container">
  <div class="vertical-center-row">
    <div align="center">
      <p id="notice"><%= notice %></p>
      <h1>Resolutions</h1>
      <table border="5" style="width:600px; background-color:#FFF;">
      <tr>
          <th style="width:300px">Title</th>
          <th>Show</th>
          <th>Edit</th>
          <th>Destroy</th>
          <th>New Amendment</th>
          <th colspan="5"></th>
      </tr>
      <% @resolutions.each do |resolution| %>
      <tr>
        <td style="width:300px"><%= resolution.title %></td>
        <td><%= link_to 'Show', resolution %></td>
        <td><%= link_to 'Edit', edit_resolution_path(resolution) %></td>
        <td><%= link_to 'Destroy', resolution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'New amendment', new_amendment_path(:resolution_id => resolution.id) %></td>
      </tr>
      <% end %>
    </table>
    <br>
    <%= link_to 'New Resolution', new_resolution_path %>
  </div>
</div>
</body>
