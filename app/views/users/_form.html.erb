    <%= f.label "Country" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Confirm your Country:" %> <br>
    <%= f.text_field :name_confirmation %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password_hash %>
  </div>
  <div class="field">
    <%= f.label "Confirm your password:" %><br>
    <%= f.password_field :password_hash_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
